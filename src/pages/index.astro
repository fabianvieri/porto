---
import BaseLayout from '@/layouts/BaseLayout.astro';

const technologies = [
	'TypeScript',
	'React.js',
	'Next.js',
	'Node.js',
	'Tailwind CSS',
	'Prisma',
];
---

<BaseLayout pageTitle="Home">
	<main
		class="container mx-auto flex flex-col items-center px-4 py-16 md:py-20"
	>
		<!-- Hero Section -->
		<div class="mb-20 text-center">
			<h1
				class="max-w-2xl text-3xl font-bold tracking-tight sm:text-4xl md:text-5xl"
			>
				<span class="text-gray-600 dark:text-gray-300"
					>Full Stack Developer crafting</span
				>
				<span
					class="from-primary dark:to-primary bg-gradient-to-r to-blue-600 bg-clip-text text-transparent dark:from-blue-400"
				>
					digital experiences
				</span>
				<span class="text-gray-600 dark:text-gray-300">with code.</span>
			</h1>
		</div>

		<!-- About Section -->
		<div class="w-full max-w-2xl space-y-12">
			<!-- Tech Stack -->
			<div class="space-y-4 text-center">
				<h2
					class="text-sm font-semibold tracking-wider text-gray-500 uppercase dark:text-gray-400"
				>
					Tech Stack
				</h2>
				<div class="flex flex-wrap justify-center gap-2 text-sm sm:text-base">
					{
						technologies.map((tech) => (
							<span class="rounded-lg bg-gray-100 px-3 py-1 dark:bg-gray-800">
								{tech}
							</span>
						))
					}
				</div>
			</div>

			<!-- About Me -->
			<div class="space-y-4">
				<h2
					class="text-center text-sm font-semibold tracking-wider text-gray-500 uppercase dark:text-gray-400"
				>
					About Me
				</h2>
				<div class="space-y-4 text-center text-gray-600 dark:text-gray-300">
					<p>
						I'm a Full Stack Developer with a passion for building modern web
						applications. Specializing in creating responsive, user-friendly
						interfaces and robust backend systems. I focus on writing clean,
						maintainable code and implementing best practices in software
						development.
					</p>
					<p>
						Currently working on web applications using modern technologies like
						React, Next.js, and Node.js. I enjoy solving complex problems and
						continuously learning new technologies to stay at the forefront of
						web development.
					</p>
				</div>
			</div>
		</div>
	</main>
</BaseLayout>
