---
import BaseLayout from '@/layouts/BaseLayout.astro';

const technologies = [
	'TypeScript',
	'React.js',
	'Angular',
	'Node.js',
	'Tailwind CSS',
	'PostgreSQL',
	'Git',
	'Docker',
];
---

<BaseLayout pageTitle="Home">
	<main class="container mx-auto max-w-3xl px-4 py-16">
		<!-- Hero Section -->
		<div class="mb-16 space-y-4">
			<h1
				class="text-4xl font-bold text-gray-800 sm:text-5xl dark:text-gray-100"
			>
				Full Stack Developer
			</h1>
			<p class="text-lg text-gray-600 dark:text-gray-300">
				Crafting digital experiences with clean, efficient code.
			</p>
		</div>

		<!-- About Section -->
		<div class="space-y-12">
			<div class="prose dark:prose-invert">
				<p class="text-gray-600 dark:text-gray-300">
					I'm a Full Stack Developer focused on building modern web
					applications. I specialize in creating responsive, user-friendly
					interfaces and robust backend systems with an emphasis on clean,
					maintainable code.
				</p>
			</div>

			<!-- Tech Stack -->
			<div class="space-y-6">
				<h2 class="text-xl font-semibold text-gray-800 dark:text-gray-100">
					Tools I've Worked With
				</h2>
				<div class="flex flex-wrap gap-3">
					{
						technologies.map((tech) => (
							<span class="rounded-md bg-gray-100 px-3 py-1 text-sm text-gray-800 transition-colors hover:bg-gray-200 dark:bg-gray-800 dark:text-gray-200 dark:hover:bg-gray-700">
								{tech}
							</span>
						))
					}
				</div>
			</div>
		</div>
	</main>
</BaseLayout>
