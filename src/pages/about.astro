---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { Button } from '@/components/ui/button';
import { Download } from '@lucide/astro';
---

<BaseLayout pageTitle="FV | About">
	<div class="container mx-auto h-full px-4">
		<div class="grid h-full items-center gap-6 py-4 md:grid-cols-2 md:gap-8">
			<!-- Profile Image Section -->
			<div
				class="relative mx-auto w-full max-w-sm overflow-hidden rounded-2xl bg-gray-100 dark:bg-gray-800"
			>
				<img
					src="https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?q=80&w=1000&auto=format&fit=crop"
					alt="Fabian Vieri"
					class="h-full w-full object-cover"
					style="aspect-ratio: 1/1;"
				/>
			</div>

			<!-- Content Section -->
			<div class="flex flex-col justify-center space-y-4">
				<h1
					class="text-3xl font-bold text-gray-900 md:text-4xl dark:text-white"
				>
					About Me
				</h1>

				<div class="space-y-4 text-gray-700 dark:text-gray-300">
					<p class="leading-relaxed">
						Hi! I'm Fabian Vieri, a passionate developer with a keen interest in
						creating meaningful digital experiences. With [X] years of
						experience in software development, I've had the opportunity to work
						on various exciting projects that have shaped my professional
						journey.
					</p>

					<p class="leading-relaxed">
						Currently, I specialize in [Your Specialties], where I focus on
						building scalable and maintainable solutions that solve real-world
						problems.
					</p>
				</div>

				<div class="pt-4">
					<Button variant="default" className="inline-flex items-center gap-2">
						<Download size={20} />
						Download Resume
					</Button>
				</div>
			</div>
		</div>
	</div>
</BaseLayout>
