---
interface Props {
	title: string;
	description: string;
	date: string;
	readingTime: string;
	tags: string[];
	slug: string;
}

const { title, description, date, readingTime, tags, slug } = Astro.props;
---

<a
	href={`/blog/${slug}`}
	class="group block overflow-hidden rounded-lg border border-gray-200 bg-white shadow-sm transition-all hover:shadow-md dark:border-gray-800 dark:bg-gray-900"
>
	<div class="p-6">
		<div class="flex items-center justify-between">
			<div
				class="flex items-center gap-2 text-sm text-gray-500 dark:text-gray-400"
			>
				<span>{date}</span>
				<span>â€¢</span>
				<span>{readingTime} min read</span>
			</div>
		</div>
		<h2
			class="mt-4 text-xl font-semibold text-gray-800 group-hover:text-blue-600 dark:text-gray-100 dark:group-hover:text-blue-400"
		>
			{title}
		</h2>
		<p class="mt-2 text-gray-600 dark:text-gray-300">
			{description}
		</p>
		<div class="mt-4 flex flex-wrap gap-2">
			{
				tags.map((tag) => (
					<span class="inline-flex items-center rounded-full bg-gray-100 px-2.5 py-0.5 text-xs font-medium text-gray-800 dark:bg-gray-800 dark:text-gray-200">
						{tag}
					</span>
				))
			}
		</div>
	</div>
</a>
